{
   "$schema": "https://json-schema.org/draft/2020-12/schema",
   "$ref": "#/$defs/root",
   "$defs": {
      "pers.embedded": {
         "type": "object",
         "properties": {"x": {
            "type": "number",
            "example": 1
         }},
         "required": ["x"]
      },
      "pers": {
         "type": "object",
         "properties": {
            "name": {
               "type": "string",
               "example": "Miller"
            },
            "age": {
               "type": "number",
               "example": 17
            },
            "#post-code": {
               "type": "number",
               "example": 12205
            },
            "driverLic": {
               "type": "boolean",
               "example": true
            },
            "null": {
               "type": "null",
               "example": null
            },
            "embedded": {"$ref": "#/$defs/pers.embedded"}
         },
         "required": [
            "name",
            "age",
            "#post-code",
            "driverLic",
            "null",
            "embedded"
         ]
      },
      "favs.2": {
         "type": "object",
         "properties": {"uups": {
            "type": "string",
            "example": "an struct"
         }},
         "required": ["uups"]
      },
      "favs.3": {
         "type": "object",
         "properties": {"embedded": {"$ref": "#/$defs/pers.embedded"}},
         "required": ["embedded"]
      },
      "root": {
         "type": "object",
         "properties": {
            "pers": {"$ref": "#/$defs/pers"},
            "favs": {
               "type": "array",
               "items": {"anyOf": [
                  {
                     "type": "string",
                     "example": "coen-brothers"
                  },
                  {"$ref": "#/$defs/favs.2"},
                  {"$ref": "#/$defs/favs.3"}
               ]}
            }
         },
         "required": [
            "pers",
            "favs"
         ]
      }
   }
}